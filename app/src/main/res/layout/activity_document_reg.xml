<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.maanondev.docuumentsearch.document_reg">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/find_document"/>

            <TextView
                android:id="@+id/textView"
                style="@style/textView_style"
                android:text="Doucment Registration" />

            <EditText
                android:id="@+id/holder_name"
                android:inputType="textCapCharacters"
                android:hint="Document Holder's Name"
                style="@style/editText_style"/>

            <EditText
                android:id="@+id/holder_fname"
                style="@style/editText_style"
                android:inputType="textCapCharacters"
                android:hint="His Father's Name" />

            <EditText
                android:id="@+id/holder_dob"
                style="@style/editText_style"
                android:inputType="date"
                android:hint="His Date/Of/Birth"/>

            <EditText
                android:id="@+id/finder_name"
                style="@style/editText_style"
                android:inputType="textCapCharacters"
                android:hint="Your Name" />

            <EditText
                android:id="@+id/mobile_no"
                style="@style/editText_style"
                android:inputType="phone"
                android:hint="Your Contact Number"/>

            <Button
                android:id="@+id/submit_d"
                style="@style/button_style"
                android:text="Proceed" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
