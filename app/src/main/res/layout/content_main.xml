<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.maanondev.docuumentsearch.MainActivity"
    tools:showIn="@layout/app_bar_main">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            app:srcCompat="@drawable/find_document"
            android:layout_margin="20dp"/>


        <TextView
            android:id="@+id/textView"
            style="@style/textView_style"
            android:text="@string/app_name"/>

        <Button
            android:id="@+id/d_reg"
            style="@style/button_style"
            android:text="Document Registration"
            android:onClick="call"/>

        <Button
            android:id="@+id/find_d"
            style="@style/button_style"
            android:text="Find Document"
            android:onClick="call"/>

        <TextView
            android:id="@+id/textView2"
            style="@style/textView_style"
            android:text="Thanks for use this app" />


    </LinearLayout>

</RelativeLayout>
